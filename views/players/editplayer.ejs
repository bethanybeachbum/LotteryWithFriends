
<% include ../partials/header %>

<div class="container">
	<div class="row">
		
		<h1 style="text-align: center;">Edit <%=player.person%> </h1>  
		<div style="width: 30%; margin: 25px auto">
			<form action="/players/<%= player._id %>?_method=PUT" method="POST">
				<div class="form-group">
						<input class="form-control" type="text" name="player[person]" value= "<%= player.person %>">					
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="player[image]" value= "<%= player.image %>">
					</div>
				
				<div class="form-group">
						<input class="form-control" type="text" name="player[contactInfo]" value= "<%= player.contactInfo %>">
					</div>
				
				<div class="form-group">
						<input class="form-control" type="number" name="player[wager]" value= "<%= player.wager %>" min="1.00" step="1.00">
					</div>
				
				
					<div class="form-group">	
						<button class="btn btn-lg btn-primary btn-block">Submit</button>	
					</div>
			</form>
				<a href="/players">Go Back</a>
		</div>
	
	</div>	
</div>

<% include ../partials/footer %>