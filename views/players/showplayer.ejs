<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Player Detail in Lottery With Friends</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
            <div id="map"></div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= player.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">This is a great player</h4>
                    <h4><a><%=player.person%></a></h4>
                    <p><%= player.description %></p>
                    <p>Contact Information: <%= player.contactInfo %></p>
                    <p>Amount wagered: $ <%= player.wager %></p>
                    <p>
                        <em>Submitted by: <a href="/users/<%= player.author.id%>"> <%=player.author.username %></a>, <%= moment(player.createdAt).fromNow() %></em>
                    </p>
                    <% if(currentUser && player.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin) { %>
                        <a class="btn btn-xs btn-warning" href="/players/<%= player._id %>/edit">Edit</a>
                        <form id="delete-form" action="/players/<%= player._id %>?_method=DELETE" method="POST">
                           <button class="btn btn-xs btn-danger">Delete</button> 
                        </form>
                    <% } %>
                    
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/players/<%= player._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% player.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                            <p>
                                <%= comment.text %> 
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin ){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/players/<%=player._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form id="delete-form" action="/players/<%=player._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                            
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<script>
  function initMap() {
    var lat = <%= player.lat %>;
    var lng = <%= player.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= player.person %><br />
      <%= player.location %></strong>
      <p><%= player.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDpX8Y-P7nfPtCRzGyOG3hZLaE9tvyRRz4&callback=initMap"></script>

<% include ../partials/footer %>