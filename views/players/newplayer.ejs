
<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add a new Player</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/players" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="player[person]" placeholder="player name">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="player[description]" placeholder="description">
                </div>
                
                <div class="form-group">
						<input class="form-control" type="text" name="player[contactInfo]" placeholder="contactInfo">
					</div>
				
				<div class="form-group">
						<input class="form-control" type="text" name="player[wager]" placeholder="wager">
					</div>
					
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/players">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>





