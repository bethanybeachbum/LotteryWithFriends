
<% include ../partials/header %>


<div class="container">

		<h1 style="text-align: center;">Edit <%= ticket.number %></h1>  
		<div style="width: 30%; margin: 25px auto;">
				<form action="/tickets/<%= ticket._id %>?_method=PUT" method="POST">
								<div class="form-group">
									<input class="form-control" type="text" name="ticket[number]" value= "<%= ticket.number %>">				
								</div>
					<div class="form-group">
						<input class="form-control" type="text" name="ticket[image]" value= "<%= ticket.image %>">
					</div>		
						<div class="form-group">
						<input class="form-control" type="text" name="ticket[description]" value= "<%= ticket.description %>">
					</div>
					<div class="form-group">	
						<button class="btn btn-lg btn-primary btn-block">Submit</button>	
					</div>
				</form>		
				<a href="/tickets">Go Back</a>
		</div>
</div>
		
<% include ../partials/footer %>
